<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ApartmentRentalsMobileApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Dark theme colors -->
        <item name="android:colorBackground">@color/darkBackground</item>
        <item name="colorPrimary">@color/darkPrimary</item>
        <item name="colorSecondary">@color/darkSecondary</item>
        <item name="colorSurface">@color/darkSurface</item>
        <item name="colorOnPrimary">@color/darkOnPrimary</item>
        <item name="colorOnBackground">@color/darkOnBackground</item>
        <item name="colorError">@color/darkError</item>
    </style>


    <style name="CustomTextField" parent="Widget.Material3.TextInputLayout.OutlinedBox">



        <item name="android:textColor">@color/darkOnBackground</item>
        <item name="android:textColorHint">@color/darkOnBackground</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxStrokeWidth">3dp</item>
        <item name="color">@color/darkOnBackground</item>
        <item name="helperTextTextColor">@color/darkOnBackground</item>
        <item name="colorOutline">@color/darkOnBackground</item>
    </style>


    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/darkPrimary</item>
        <item name="android:textColor">@color/darkOnPrimary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:insetLeft">16dp</item>
        <item name="android:insetRight">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomBodyText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/darkOnBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:autoLink">none</item>

    </style>
</resources>